<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Electronix Store</title>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1252" />
    <link href="~/Content/css/style_login.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <script src="~/Content/js/boxOver.js"></script>
    <script src="~/Content/js/windowopen.js"></script>
    <link href="~/Content/css/table_detail.css" rel="stylesheet" />
    <link href="~/Content/css/table_cart.css" rel="stylesheet" />
    <link href="~/Content/css/Media.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


   
</head>
<body>
    <div id="main_container">
        <div class="top_bar">
            @{Html.RenderAction("Index", "Account");}
            @{Html.RenderAction("Index", "Search");}
        </div>
        <div id="header">
            <div id="logo"> <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/images/logo.png")" alt="" border="0" width="237" height="140" /></a> </div>
            <div class="oferte_content">
                <div class="top_divider"><img src="@Url.Content("~/Content/images/header_divider.png")" alt="" width="1" height="164" /></div>
                @{Html.RenderAction("Index", "Slide");}
                <div class="top_divider"><img src="@Url.Content("~/Content/images/header_divider.png")" alt="" width="1" height="164" /></div>
            </div>
            <!-- end of oferte_content-->
        </div>
        <div id="main_content">
            <div id="menu_tab">
                <div class="left_menu_corner"></div>
               @{Html.RenderAction("Index", "Menu");}
               
                <div class="right_menu_corner"></div>
            </div>
            <!-- end of menu tab -->
            <div class="left_content">

                <div class="title_box">Sản phẩm đặc biệt</div>
                @{Html.RenderAction("SpecialProduct", "Product");}

                <div class="title_box">Nhận tin tức</div>
               @{Html.RenderAction("Newsletter", "Support");}

            </div>

            <div class="center_content">

                @RenderBody()
                </div>

                <div class="right_content">
                    @{Html.RenderAction("Index", "Cart");}
                    <div class="title_box">Sản phẩm mới</div>
                    @{Html.RenderAction("NewProduct", "Product");}
                    <div class="title_box">Nhà sản xuất</div>
                    @{Html.RenderAction("Index", "Manufactory");}
                </div>
                <!-- end of right content -->
            </div>
        <!-- end of main content -->
        <div class="footer">
            <div class="left_footer"> <img src="@Url.Content("~/Content/images/footer_logo.png")" alt="" width="170" height="49" /></div>
            <div class="center_footer">
                Template name. All Rights Reserved 2008<br />
                <a href="http://csscreme.com"><img src="@Url.Content("~/Content/images/csscreme.jpg")" alt="csscreme" border="0" /></a><br />
                <img src="@Url.Content("~/Content/images/payment.gif")" alt="" />
                >
            </div>
            <div class="right_footer"> <a href="">home</a> <a href="">about</a> <a href="">sitemap</a> <a href="">rss</a> <a href="contact.html">contact us</a> </div>
        </div>
    </div>
</body>
</html>