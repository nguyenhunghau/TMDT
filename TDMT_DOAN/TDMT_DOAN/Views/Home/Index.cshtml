@using TDMT_DOAN.Models;
@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- end of left content -->

    <div class="center_title_bar">Sản phẩm mới</div>
 
    @for (int i = 0; i< Model.newList.Count; i++)
    {
        <div class="prod_box">
            <div class="top_prod_box"></div>
            <div class="center_prod_box">
                <div class="product_title"><a href="Home/Detail">@Model.newList[i].TEN</a></div>
                <div class="product_img"><a href="Home/Detail"><img width="100" height="100" src="@Url.Content("~/Content/images/" + Model.newList[i].HINHANH)" alt="" border="0" /></a></div>
            
                @if(Model.newListPromotion[i] != 0){
                    
                    <div class="prod_price"><span class="reduce">@Model.newList[i].DONGIABAN</span> <span class="price">@Model.newListPromotion[i]</span></div>
                }
                else
                {
                    <div class="prod_price"><span class="price">@Model.newList[i].DONGIABAN</span></div>
                }
            
            </div>
            <div class="bottom_prod_box"></div>
            <div class="prod_details_tab"> 
                <a href="@Url.Action("AddCart", "Cart", new { id = Model.newList[i].MA})" title="header=[Thêm giỏ hàng] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/cart.gif")" alt="" border="0" class="left_bt" /></a> 
                <a href="@Url.Action("Details", "Product", new { id = Model.newList[i].MA})" title="header=[Xem chi tiết] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/square-blue-add.gif")" alt="" border="0" class="left_bt" /></a> 
            </div>
        </div>
    }



    
    

    <div class="center_title_bar">Sản phẩm đặc biệt</div>
    
    @for (int i = 0; i < Model.specialList.Count; i++)
        {
        <div class="prod_box">
            <div class="top_prod_box"></div>
            <div class="center_prod_box">
                <div class="product_title"><a href="Home/Detail">@Model.specialList[i].TEN</a></div>
                <div class="product_img"><a href="Home/Detail"><img width="100" height="100" src="@Url.Content("~/Content/images/" + Model.specialList[i].HINHANH)" alt="" border="0" /></a></div>

                @if (Model.specialListPromotion[i] != 0)
                {

                    <div class="prod_price"><span class="reduce">@Model.specialList[i].DONGIABAN</span> <span class="price">@Model.specialListPromotion[i]</span></div>
                    }
                    else
                    {
                    <div class="prod_price"><span class="price">@Model.specialList[i].DONGIABAN</span></div>
                    }

            </div>
            <div class="bottom_prod_box"></div>
            <div class="prod_details_tab"> 
                <a href="#" title="header=[Thêm giỏ hàng] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/cart.gif")" alt="" border="0" class="left_bt" /></a> 
                <a href="#" title="header=[Sản phẩm đặc biệt] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/favs.gif")" alt="" border="0" class="left_bt" /></a> 
                <a href="@Url.Action("Details", "Product", new { id = Model.specialList[i].MA })" title="header=[Xem chi tiết] body=[&nbsp;] fade=[on]"><img src="@Url.Content("~/Content/images/square-blue-add.gif")" alt="" border="0" class="left_bt" /></a> 
            </div>
        </div>
    }

<!-- end of center content -->
