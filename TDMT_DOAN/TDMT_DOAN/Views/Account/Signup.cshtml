@{
    ViewBag.Title = "Signup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TDMT_DOAN.Models.RegisterViewModel

<div class="center_content">
    <section class="container_login">
        <div class="login">
            <h1>Đăng kí tài khoản</h1>
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @Html.AntiForgeryToken()


                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập", @type = "text", @required = "required" })
                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password", @required = "required" })
                @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận mật khẩu", @type = "password", @required = "required" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Họ tên", @type = "text", @required = "required" })
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email", @type = "email", @required = "required" })

                <p class="submit_login"><input type="submit" name="commit" value="Sign Up"></p>
            }
        </div>
    </section>
</div>

